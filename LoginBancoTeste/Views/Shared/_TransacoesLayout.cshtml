<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="icon" href="~/Content/img/bank.png" type="image/x-icon">
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/jumbotron-narrow.css")
</head>
<body>

    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    <li role="presentation" class="active">@Html.ActionLink("Home","Index","Transacoes")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li role="presentation">@Html.ActionLink("Sair", "Sair", "Autenticador")</li>
                    }
                </ul>
            </nav>
            <h3 class="text-muted">Caixa ATM</h3>
        </div>

        <div class="container body-content">
            @RenderBody()
            <footer class="footer">
                <p>&copy; @DateTime.Now.Year - Caixa ATM</p>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>


