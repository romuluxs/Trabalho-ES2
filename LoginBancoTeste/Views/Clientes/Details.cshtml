@model LoginBancoTeste.Models.Cliente

@{
    ViewBag.Title = "Detalhes";
}

<h2>Detalhes</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Cliente</h3>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Endereco)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Endereco.Rua),
                @Html.DisplayFor(model => model.Endereco.Cidade),
                @Html.DisplayFor(model => model.Endereco.Numero),
                @Html.DisplayFor(model => model.Endereco.Cep)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Telefone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Celular)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Celular)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

        </dl>
    </div>
</div>

<p>
    <a href="@Url.Action("Create", "Contas", new { ClienteId = Model.Id })" class="btn btn-sm btn-primary">
        <span class="glyphicon glyphicon-plus"></span>
        Cadastrar Conta
    </a>
</p>

@if (Model.Contas.Count > 0)
{
    <div class="panel panel-default">
        <!-- Default panel contents -->
        <div class="panel-heading">
            <h3 class="panel-title">Contas</h3>
        </div>
        <!-- Table -->
        <table class="table table-hover">
            <tr>
                <th>
                    Numero
                </th>
                <th>
                    Saldo
                </th>
                <th>
                    Tipo de Conta
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Contas)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Saldo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoDeConta)
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", "Clientes", new { id = item.Numero })" class="btn btn-xs btn-primary">
                            <span class="glyphicon glyphicon-trash"></span>
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
}
else
{
    <hr />
}


<p>
    <a href="@Url.Action("Index", "Clientes")" class="btn btn-sm btn-default">
        <span class="glyphicon glyphicon-chevron-left"></span>
        Voltar
    </a>
</p>
